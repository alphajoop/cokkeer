{
  "name": "cokkeer",
  "version": "1.2.0",
  "private": false,
  "homepage": "https://github.com/alphajoop/cokkeer",
  "repository": {
    "type": "git",
    "url": "git@github.com:alphajoop/cokkeer.git"
  },
  "description": "Ultra-fast, zero-dependency syntax highlighter optimized for Bun & TypeScript.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run clean && tsc && bun build src/index.ts --outdir dist --minify",
    "clean": "bunx rimraf dist",
    "test": "bun test",
    "format": "bunx --bun biome format --write",
    "lint": "bunx --bun biome lint",
    "check": "bunx --bun biome check",
    "prepublishOnly": "bun run lint && bun run test && bun run build",
    "prepare": "husky"
  },
  "author": "Alpha Diop",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "license": "MIT",
  "keywords": [
    "syntax highlighting",
    "bun",
    "typescript",
    "highlighter",
    "frontend",
    "react"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/bun": "^1.3.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "semantic-release": "^25.0.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "bunx --bun biome format --write",
      "bunx --bun biome check"
    ]
  }
}
